{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "space-sim/process.schema.json",
  "title": "Process Definition Pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "packId",
    "version",
    "processes"
  ],
  "properties": {
    "packId": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "processes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "name"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "energyCost": {
            "type": "number",
            "minimum": 0
          },
          "energyGain": {
            "type": "number",
            "minimum": 0
          },
          "consume": {
            "type": "object",
            "additionalProperties": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          },
          "produce": {
            "type": "object",
            "additionalProperties": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          },
          "failMessage": {
            "type": "string",
            "minLength": 1
          },
          "successMessage": {
            "type": "string",
            "minLength": 1
          },
          "silentSuccess": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
