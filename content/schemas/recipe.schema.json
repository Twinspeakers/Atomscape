{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "space-sim/recipe.schema.json",
  "title": "Recipe Definition Pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "packId",
    "version",
    "recipes"
  ],
  "properties": {
    "packId": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "recipes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "label",
          "tier",
          "discipline",
          "station",
          "unlock",
          "inputs",
          "outputs"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "tier": {
            "type": "integer",
            "minimum": 1
          },
          "discipline": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "station": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "unlock": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "kind",
              "id"
            ],
            "properties": {
              "kind": {
                "type": "string",
                "enum": [
                  "starter",
                  "quest",
                  "research",
                  "reputation"
                ]
              },
              "id": {
                "type": "string",
                "pattern": "^[a-z][a-zA-Z0-9.:-]*$"
              }
            }
          },
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "processId": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "inputs": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          },
          "outputs": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          },
          "tags": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-zA-Z0-9]*$"
            }
          }
        }
      }
    }
  }
}
