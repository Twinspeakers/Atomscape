{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "space-sim/resource.schema.json",
  "title": "Resource Catalog Pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "packId",
    "version",
    "resources"
  ],
  "properties": {
    "packId": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "resources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "label",
          "unit",
          "description",
          "atomVector"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "unit": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "atomVector": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "H",
              "C",
              "O",
              "Si",
              "Fe"
            ],
            "properties": {
              "H": { "type": "number", "minimum": 0 },
              "C": { "type": "number", "minimum": 0 },
              "O": { "type": "number", "minimum": 0 },
              "Si": { "type": "number", "minimum": 0 },
              "Fe": { "type": "number", "minimum": 0 }
            }
          }
        }
      }
    }
  }
}
