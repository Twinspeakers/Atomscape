{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "@domain/*": ["src/domain/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "..",
    "outDir": "./.tmp",
    "noEmit": false
  },
  "include": [
    "./wiki-sync.ts",
    "../tools/wiki-build/**/*.ts",
    "../src/domain/spec/**/*.ts",
    "../src/domain/resources/resourceCatalog.ts",
    "../src/generated/registry/resources.ts",
    "../src/generated/registry/processes.ts",
    "../src/generated/registry/recipes.ts",
    "../src/features/quests/questDefinitions.ts",
    "../src/wiki/wikiTypes.ts"
  ]
}
